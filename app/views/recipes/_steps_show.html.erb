<% steps.each_with_index do |step, index| %>

    <div class='step-description-js'>
    <div class="step-js">
      <%= render partial: 'steps/step', locals: {index: index, step: step}%>
    </div>

    <%= form_for step, html: {class: 'edit-step-js hide'}, remote: true do |f| %>
      <%= f.hidden_field :index, value: index %>
      <%= f.text_area :description %>
      <% if current_user == @recipe.user %>
        <%= link_to 'Delete', {controller: 'steps', action: 'destroy', id: step.id, :'data-index-id' => index, recipe_id: step.recipe_id}, class: 'delete-step-js', method: :delete , remote: true %>
        <%end%>
        <%= f.submit "Save" %>
    <%end%>
  </div>
<%end%>



