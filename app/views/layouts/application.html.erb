<!DOCTYPE html>
<html>
<head>
  <title>Cookbook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <% if current_user.class == User %>
    <h3>Get Cookin', <%= current_user.name %>!</h3>
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Login", login_path %>
  <% end %>
  <form class="navbar-form navbar-left" role="search" method="GET" action="/searches">
       <div class="form-group">
         <input type="text" id="search-bar" name = "keyword" class="form-control" placeholder="Search By Recipe Name, Ingredient, or Category" size="40">
     </div>
       <button type="submit" class="btn btn-default">Search</button>
     </form>
</nav>
<%= yield %>

</body>
</html>
